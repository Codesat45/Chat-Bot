import nltk
import random
import string
import re

# Download NLTK resources (first time only)
nltk.download('punkt')
nltk.download('wordnet')

from nltk.chat.util import Chat, reflections

# Define some basic patterns and responses
patterns = [
    (r'hi|hello|hey', ['Hello! How can I help you today?', 'Hey there! What can I do for you?']),
    (r'how are you?', ['I am just a bot, but I\'m doing great! How about you?', 'I am doing fine, thank you for asking!']),
    (r'quit', ['Bye! Take care.', 'Goodbye! See you soon!']),
    (r'(.*) your name?', ['I am a chatbot created by a kind programmer.', 'My name is ChatBot. What can I help you with?']),
    (r'(.*) help (.*)', ['Sure, I am here to assist you! Please tell me more about your issue.']),
    (r'(.*) (your|you) (.*)', ['Sorry, I don\'t quite understand what you mean. Could you clarify?']),
    (r'bye', ['Goodbye! Have a great day!']),
]

# Create the chatbot object
chatbot = Chat(patterns, reflections)

# Start the conversation
def start_chat():
    print("Hello! I am a simple chatbot. Type 'quit' to end the conversation.")
    while True:
        # Take user input
        user_input = input("You: ").lower()
        
        # Check for exit command
        if user_input == 'quit':
            print("Chatbot: Goodbye!")
            break
        
        # Get the bot's response
        response = chatbot.respond(user_input)
        
        # If no response found, default message
        if response is None:
            print("Chatbot: Sorry, I didn't understand that.")
        else:
            print("Chatbot:", response)

# Run the chatbot
if __name__ == '__main__':
    start_chat()
